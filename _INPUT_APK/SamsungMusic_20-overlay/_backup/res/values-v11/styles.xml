<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoDisplay">
        <item name="android:background">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoDisplay">true</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="PlayerActionBarStyle" parent="@android:style/Widget.DeviceDefault.Light.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">none</item>
    </style>
    <style name="PlayerActivity" parent="@android:style/Theme.DeviceDefault.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:actionBarStyle">@style/PlayerActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
</resources>
