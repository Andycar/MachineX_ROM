<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/description" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/custom_title_margin_top"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:gravity="center_vertical" android:id="@id/title_heading" android:layout_width="fill_parent" android:layout_height="@dimen/custom_title_height">
        <ImageView android:id="@id/icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/custom_title_margin_left" android:src="@drawable/icon_setupwizard" android:scaleType="fitEnd" android:layout_centerVertical="true" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/setup_wizard" android:layout_toLeftOf="@id/stepIndicator" android:layout_toRightOf="@id/icon" style="@style/CustomTitleTextStyle" />
        <TextView android:id="@id/stepIndicator" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/StepIndicatorTextStyle" />
    </RelativeLayout>
    <View android:id="@id/divider" android:background="@color/button_divider_color" android:layout_width="fill_parent" android:layout_height="@dimen/bottom_button_divider_width" android:layout_below="@id/title_heading" android:layout_alignParentLeft="true" />
</RelativeLayout>