<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen android:title="@string/lock_settings_picker_title"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
    <PreferenceCategory android:title="@string/lock_screen_security" android:key="lock_screen_security_category" />
    <PreferenceScreen android:persistent="false" android:title="@string/unlock_set_unlock_launch_picker_title" android:key="unlock_set_or_change" android:summary="@string/unlock_set_unlock_mode_pin" settings:keywords="@string/keywords_lockscreen" />
    <PreferenceCategory android:title="@string/lock_screen_pin_options" android:key="lock_screen_options_category" />
    <com.android.settings.SwitchPreferenceScreen android:title="@string/dualclock_settings_title" android:key="dualclock_settings" android:summary="@string/dualclock_settings_summary" android:fragment="com.android.settings.dualclock.DualClockSetting" />
    <PreferenceScreen android:title="@string/lock_screen_widget_options" android:key="lock_screen_widget_options" android:summary="@string/lock_screen_widget_options_summary" android:fragment="com.android.settings.LockScreenSettings" />
    <CheckBoxPreference android:title="@string/lock_screen_shortcut_camera" android:key="lock_screen_camera_shortcut" android:summary="" />
    <PreferenceScreen android:title="@string/additional_information" android:key="additional_information" android:summary="@string/accessibility_feature_state_on" android:fragment="com.android.settings.LockAddInfoSettings" />
    <com.android.settings.SwitchPreferenceScreen android:title="@string/safety_zone_title" android:key="safetyzone_settings" android:summary="@string/safety_zone_summary" android:fragment="com.android.settings.safetyzone.SafetyZoneSettings" />
    <CheckBoxPreference android:title="@string/quick_note_title" android:key="quick_note" android:summary="@string/quick_note_summary" android:defaultValue="false" />
    <ListPreference android:persistent="false" android:entries="@array/lock_after_timeout_entries" android:title="@string/lock_after_timeout" android:key="lock_after_timeout" android:summary="@string/lock_after_timeout_summary" android:entryValues="@array/lock_after_timeout_values" />
    <CheckBoxPreference android:title="@string/lockpattern_settings_enable_power_button_instantly_locks" android:key="power_button_instantly_locks" />
    <CheckBoxPreference android:title="@string/auto_swipe_title" android:key="auto_swipe" android:summary="@string/auto_swipe_summary_pin" />
    <PreferenceScreen android:title="@string/owner_info_settings_title" android:key="owner_info_settings" android:summary="@string/owner_info_settings_summary" />
</PreferenceScreen>