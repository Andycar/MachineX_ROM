<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE siop_document [
<!ELEMENT siop_document (levels , default_scenario , extra_scenario?)>
<!ELEMENT levels (level)+>
<!ELEMENT level EMPTY>
<!ATTLIST level
          id CDATA #REQUIRED
          temp CDATA #REQUIRED>
<!ELEMENT default_scenario (limiter)+>
<!ELEMENT limiter (sts_item* , table_item*)>
<!ATTLIST limiter
          name CDATA #REQUIRED
          type (STS|number|bool) #REQUIRED>
<!ELEMENT sts_item EMPTY>
<!ATTLIST sts_item
          pre CDATA #IMPLIED
          perc CDATA #IMPLIED
          trigger CDATA #REQUIRED
          release CDATA #REQUIRED
          min CDATA #IMPLIED
          max CDATA #IMPLIED
          duration CDATA #IMPLIED>
<!ELEMENT table_item EMPTY>
<!ATTLIST table_item
          temp CDATA #REQUIRED
          value CDATA #REQUIRED
          low_temp CDATA #IMPLIED>
<!ELEMENT extra_scenario (scenario)+>
<!ELEMENT scenario (trigger_statuses? , trigger_packages? , limiter*)>
<!ATTLIST scenario name CDATA #REQUIRED>
<!ATTLIST scenario priority CDATA #IMPLIED>
<!ELEMENT trigger_statuses (status)+>
<!ELEMENT status EMPTY>
<!ATTLIST status name CDATA #REQUIRED>
<!ELEMENT trigger_packages (package)+>
<!ELEMENT package EMPTY>
<!ATTLIST package name CDATA #REQUIRED>
] >

<siop_document>

    <levels>
        <level id="0" temp="460" />
        <level id="1" temp="480" />
        <level id="2" temp="500" />
        <level id="3" temp="520" />
        <level id="4" temp="540" />
        <level id="5" temp="560" />
        <level id="6" temp="580" />
        <level id="7" temp="600" />
        <level id="8" temp="720" />
    </levels>

    <default_scenario>
        <limiter name="CPUFreqMax" type="number">
            <table_item temp="500" value="-1" />
            <table_item temp="520" value="1458000" />
            <table_item temp="540" value="1242000" />
            <table_item temp="560" value="1026000" />
        </limiter>
        <limiter name="CPUCoreMax" type="number">
            <table_item temp="460" value="-1" />
        </limiter>
        <limiter name="GPUFreqMax" type="number">
            <table_item temp="520" value="-1" />
            <table_item temp="540" value="320000000" />
            </limiter>
        <limiter name="PST" type="number">
            <table_item temp="460" value="0" />
        </limiter>
        <limiter name="LCDBrightness" type="number">
            <table_item temp="500" value="-1" />
            <table_item temp="520" value="219" />
        </limiter>
        <limiter name="Charging" type="number">
            <table_item temp="500" value="70" />
            <table_item temp="520" value="50" />
            <table_item temp="540" value="30" />
            <table_item temp="560" value="30" />
            <table_item temp="580" value="0" />
        </limiter>
        <limiter name="Flash" type="bool">
            <table_item temp="540" value="0" />
        </limiter>
        <limiter name="Recording" type="bool">
            <table_item temp="720" value="0" />
        </limiter>
    </default_scenario>

    <extra_scenario>

        <scenario name="HeavyUserScenario">
            <limiter name="CPUFreqMax" type="number">
                <table_item temp="580" value="-1" />
                <table_item temp="600" value="1026000" />
            </limiter>
            <limiter name="GPUFreqMax" type="number">
                <table_item temp="460" value="-1" />
            </limiter>
        </scenario>

        <scenario name="GHeavyUserScenario">
            <limiter name="GPUFreqMax" type="number">
                <table_item temp="460" value="-1" />
                <table_item temp="580" value="320000000" />
            </limiter>
        </scenario>

        <scenario name="CameraRecording">
            <trigger_statuses>
                <status name="Camera_recording" />
                <status name="Camera_recordingDual" />
                <status name="ChatOnV_vtCall" />
                <status name="Phone_vtCall" />
            </trigger_statuses>

            <limiter name="LCDBrightness" type="number">
                <table_item temp="460" value="249" />
                <table_item temp="500" value="200" />
                <table_item temp="540" value="200" />
            </limiter>
        </scenario>

        <scenario name="CameraShooting">
            <trigger_statuses>
                <status name="Camera_panoramaShot" />
                <status name="Camera_dramaShot" />
                <status name="Camera_burstShot" />
            </trigger_statuses>

            <limiter name="CPUFreqMax" type="number">
                <table_item temp="480" value="-1" />
                <table_item temp="500" value="1458000" />
                <table_item temp="520" value="1242000" />
                <table_item temp="560" value="1026000" />
            </limiter>
            <limiter name="GPUFreqMax" type="number">
                <table_item temp="520" value="-1" />
                <table_item temp="560" value="320000000" />
            </limiter>
        </scenario>

        <scenario name="ScreenOff">
            <limiter name="Charging" type="number">
                <table_item temp="460" value="100" />
            </limiter>
        </scenario>

        <scenario name="ScreenOffInCall">
            <limiter name="Charging" type="number">
                <table_item temp="460" value="70" />
            </limiter>
        </scenario>

        <scenario name="ScreenOnAppStarted">
            <limiter name="Charging" type="number">
                <table_item temp="460" value="30" />
            </limiter>
        </scenario>

        <scenario name="GroupPlay">
            <trigger_statuses>
                <status name="GroupPlay_gpuLock" />
                <status name="Navigation_show" />
            </trigger_statuses>

            <limiter name="GPUFreqMax" type="number">
                <table_item temp="460" value="128000000" />
            </limiter>
        </scenario>

        <scenario name="MirroringBoost" priority="1">
            <trigger_statuses>
                <status name="ScreenMirroringBooster" />
            </trigger_statuses>

            <limiter name="CPUFreqMax" type="number">
                <table_item temp="460" value="-1" />
                <table_item temp="480" value="1566000" />
                <table_item temp="560" value="1242000" />
            </limiter>
        </scenario>

        <scenario name="Navigation">
            <trigger_packages>
                <package name="com.google.android.apps.maps" />
                <package name="com.skt.skaf.l001mtm091" />
                <package name="kt.navi" />
                <package name="com.mnsoft.lgunavi" />
            </trigger_packages>

            <limiter name="CPUFreqMax" type="number">
                <table_item temp="460" value="-1" />
                <table_item temp="480" value="1026000" />
            </limiter>
        </scenario>

        <scenario name="AppStart">
            <limiter name="CPUFreqMax" type="number">
                <table_item temp="460" value="-1" />
            </limiter>
            <limiter name="GPUFreqMax" type="number">
                <table_item temp="460" value="-1" />
            </limiter>
        </scenario>

        <scenario name="FullScreenGames">
            <limiter name="CPUFreqMax" type="STS">
                <sts_item trigger="490" release="470" min="918000" />
            </limiter>
            <limiter name="GPUFreqMax" type="STS">
                <sts_item trigger="490" release="470" min="200000000" />
            </limiter>
        </scenario>

    </extra_scenario>

</siop_document>
