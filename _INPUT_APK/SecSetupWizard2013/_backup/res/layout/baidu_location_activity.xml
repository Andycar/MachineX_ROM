<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@id/baidu_location_page" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/baidu_checkbox" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <CheckBox android:textSize="@dimen/location_chk_size" android:id="@id/agree_nlp_wlan_scan" android:paddingLeft="@dimen/location_chk_paddingLeft" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/location_chk_marginLeft" android:layout_marginTop="@dimen/location_chk_marginTop" android:layout_marginRight="@dimen/location_chk_marginRight" android:text="@string/wifi_scan_always_available_summary" />
