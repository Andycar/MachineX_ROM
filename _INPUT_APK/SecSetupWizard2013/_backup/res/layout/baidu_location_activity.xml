            <TextView android:id="@id/location_sharing_msg2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/location_msg_marginLeft" android:layout_marginRight="@dimen/location_msg_marginRight" android:text="@string/location_sharing_message_baidu2" android:layout_below="@id/location_sharing_msg1" style="@style/description_area" />
            <TextView android:id="@id/location_sharing_msg3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/location_msg_marginLeft" android:layout_marginRight="@dimen/location_msg_marginRight" android:text="@string/location_sharing_message_baidu3" android:layout_below="@id/location_sharing_msg2" style="@style/description_area" />
            <TextView android:id="@id/location_sharing_msg4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/location_msg_marginLeft" android:layout_marginRight="@dimen/location_msg_marginRight" android:text="@string/location_sharing_message_baidu4" android:layout_below="@id/location_sharing_msg3" style="@style/description_area" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>